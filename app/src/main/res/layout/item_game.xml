<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textHomeOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/odds"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageHomeTeamLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/home_team_logo"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textHomeTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_label"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textVersus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textAwayOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/odds"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageAwayTeamLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/away_team_logo"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textAwayTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/away_label"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
